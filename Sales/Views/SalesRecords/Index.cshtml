@{
    ViewData["Title"] = "Sales Records";
}

<h1>@ViewData["Title"]</h1>
<h2>Simple Search</h2>
<div class="row">
    <div class="col-md-6">
        <form asp-action="SimpleSearch">
            <fieldset>
                <div class="form-group">
                    <label for="minDate" class="control-label">Min Date</label>
                    <div class="col-lg-10">
                        <input type="date" name="minDate" class="form-control"/>
                    </div>
                </div>
                <div class="form-group">
                    <label for="maxDate" class="control-label">Max Date</label>
                    <div class="col-lg-10">
                        <input type="date" asp-name="maxDate" class="form-control"/>
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-lg-10 col-lg-offset-2">
                        <button type="submit" class="btn btn-primary">Submit</button>
                    </div>
                </div>
            </fieldset>
        </form>
    </div>
</div>
<h2>Grouping Search</h2>
<div class="row">
    <div class="col-md-6">
        <form asp-action="GroupingSearch">
            <fieldset>
                <div class="form-group">
                    <label for="minDate" class="control-label">Min Date</label>
                    <div class="col-lg-10">
                        <input type="date" name="minDate" class="form-control"/>
                    </div>
                </div>
                <div class="form-group">
                    <label for="maxDate" class="control-label">Max Date</label>
                    <div class="col-lg-10">
                        <input type="date" name="maxDate" class="form-control"/>
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-lg-10 col-lg-offset-2">
                        <button type="submit" class="btn btn-primary">Submit</button>
                    </div>
                </div>
            </fieldset>
        </form>
    </div>
</div>