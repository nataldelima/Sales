@{
    ViewData["Title"] = "Sales Records";
}

<h1>@ViewData["Title"]</h1>
<h2>Simple Search</h2>

<nav class="navbar navbar-expand-lg navbar-light bg-light mb-4">
    <div class="container-fluid">
        <form asp-action="SimpleSearch" class="d-flex align-items-end gap-2">
            <div class="form-group">
                <label for="minDate" class="form-label">Min Date</label>
                <input type="date" name="minDate" class="form-control"/>

            </div>
            <div class="form-group">
                <label for="maxDate" class="form-label">Max Date</label>
                <input type="date" asp-name="maxDate" class="form-control"/>
            </div>
            <button type="submit" class="btn btn-primary">Submit</button>
        </form>
    </div>
</nav>


<h2>Grouping Search</h2>

<nav class="navbar navbar-expand-lg navbar-light bg-light mb-4">
    <div class="container-fluid">
        <form asp-action="GroupingSearch" class="d-flex align-items-end gap-2">

            <div class="form-group">
                <label for="minDate" class="control-label">Min Date</label>
                <input type="date" name="minDate" class="form-control"/>
            </div>
            <div class="form-group">
                <label for="maxDate" class="control-label">Max Date</label>
                <input type="date" name="maxDate" class="form-control"/>

            </div>
            <button type="submit" class="btn btn-primary">Submit</button>

        </form>
    </div>
</nav>
